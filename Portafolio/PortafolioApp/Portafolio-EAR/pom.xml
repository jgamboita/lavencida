<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>PortafolioApp</artifactId>
        <groupId>com.conexia.emssanar</groupId>
        <version>1.1.8.3-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>Portafolio-EAR</artifactId>
    <packaging>ear</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <profiles>
        <profile>
            <id>deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <version>${wildfly_plugin.version}</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>    

    <dependencies>
        <dependency>
            <groupId>com.conexia.emssanar</groupId>
            <artifactId>Portafolio-EJB</artifactId>
            <version>1.1.8.3-SNAPSHOT</version>
            <type>ejb</type>
            <exclusions>
                <exclusion>
                    <artifactId>eclipselink</artifactId>
                    <groupId>org.eclipse.persistence</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.conexia.emssanar</groupId>
            <artifactId>Seguridad-EJB</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>ejb</type>
            <exclusions>
                <exclusion>
                    <artifactId>eclipselink</artifactId>
                    <groupId>org.eclipse.persistence</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.conexia.emssanar</groupId>
            <artifactId>Portafolio-WAR</artifactId>
            <version>1.1.8.3-SNAPSHOT</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <build>
        <finalName>portafolio</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <version>6</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <skinnyWars>false</skinnyWars>

                    <modules>
                        <webModule>
                            <groupId>com.conexia.emssanar</groupId>
                            <artifactId>Portafolio-WAR</artifactId>
                            <contextRoot>/wap/portafolio</contextRoot>
                        </webModule>
                        <ejbModule>
                            <groupId>com.conexia.emssanar</groupId>
                            <artifactId>Seguridad-EJB</artifactId>
                            <bundleFileName>seguridad-ejb.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.conexia.emssanar</groupId>
                            <artifactId>Portafolio-EJB</artifactId>
                            <bundleFileName>portafolio-ejb.jar</bundleFileName>
                        </ejbModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
